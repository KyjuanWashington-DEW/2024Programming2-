<Page x:Name="SetupP" x:Class="DEWsOggleWPF.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEWsOggleWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SetupPage">

    <Grid Background="White">
        <TextBlock
            HorizontalAlignment="Center" Margin="0,60,0,0" FontSize="20" Height="129" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="IntroductionText">
            <Run Text="                    Welcome To DEWsOggle Game."/>
            <LineBreak/>
            <Run/>
            <LineBreak/>
            <Run Text="Please Input Your Name Then Press Enter To Continue"/>
        </TextBlock>
        <TextBox
            x:Name="NameTextBox"
            HorizontalAlignment="Center"
            Margin="0,250,0,0"
            TextWrapping="Wrap"
            Text="Enter Your Name Here"
            VerticalAlignment="Top"
            Width="252"
            Height="44"
            Foreground="#FF868686"
            FontSize="25"
            GotFocus="NameTextBox_GotFocus"
            KeyDown="NameTextBox_KeyDown"/>

    </Grid>
</Page>
